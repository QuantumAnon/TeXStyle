      \newmdtheoremenv[style=corollary]{corollary}%
        {Corollary}[theorem]
      \providecommand*{\corollaryautorefname}{Corollary}
    \else
      \theoremstyle{Break}
      \newmdtheoremenv[style=corollary]{corollary}%
