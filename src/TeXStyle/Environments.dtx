%% Environments
  \RequirePackage{amsthm}
  \RequirePackage[framemethod=tikz]{mdframed}
  \RequirePackage{listings}
  \RequirePackage[shortlabels]{enumitem}
  \ifHyperrefMacros
  \RequirePackage{aliascnt}
  \fi

