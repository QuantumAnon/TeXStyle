    innertopmargin=.01cm, innerbottommargin=0cm,
    leftmargin=0cm, innerleftmargin=.5cm,
    hidealllines=true,
    leftline=true, linecolor=line-grey,
    linewidth=.05cm
  }
  \ifHyperrefMacros
    \theoremstyle{Break}
    \newaliascnt{lemma}{theorem}
    \newmdtheoremenv[style=lemma]{lemma}[lemma]{Lemma}
    \aliascntresetthe{lemma}
    \providecommand*{\lemmaautorefname}{Lemma}
  \else
    \theoremstyle{Break}
    \newmdtheoremenv[style=lemma]{lemma}[theorem]{Lemma}
  \fi

%    \end{macrocode}
% \iffalse
%</package>
