#!/bin/sh

TEXSTYLESRCDIR="src/texstyle/out"
TEXSTYLENOTESSRCDIR="src/texstyle-notes/out"
BUILDDIR="build"


if [ ! -d $TEXSTYLESRCDIR ]; then
    mkdir -p $TEXSTYLESRCDIR
fi

if [ ! -d $TEXSTYLENOTESSRCDIR ]; then
    mkdir -p $TEXSTYLENOTESSRCDIR
fi

if [ ! -d $BUILDDIR ]; then
    mkdir -p $BUILDDIR
fi

if [ -z $TEXMFLOCAL ]; then
    echo "TEXMFLOCAL is undefined, please set it and rerun this configuration script"
else
    if [ ! -d "${TEXMFLOCAL}/tex/latex/texstyle" ]; then
       mkdir -p "${TEXMFLOCAL}/tex/latex/texstyle"
    fi
fi
